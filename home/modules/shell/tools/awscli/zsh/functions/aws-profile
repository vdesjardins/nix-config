function aws-profile {
  local profile=$1

  unset AWS_ACCESS_KEY_ID AWS_SECRET_ACCESS_KEY AWS_SESSION_TOKEN

  if [[ "$profile" != "" ]]; then
      export AWS_PROFILE="$profile"
  else
      cat ~/.aws/config | jc --ini | jq 'to_entries | .[] | select(.value.sso_account_id != null) | "\(.value.sso_account_id)\t\(.key | split(" ") | .[1])"' -Mr | fzf | awk '{ print $2; }'
  fi
}

# vim: ft=bash
