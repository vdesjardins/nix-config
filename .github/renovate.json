{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "customManagers:dockerfileVersions",
    ":enableVulnerabilityAlerts"
  ],
  "branchPrefix": "renovate/",
  "timezone": "UTC",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "commitMessageLowerCase": "auto",
  "ignoreDeps": [],
  "labels": ["renovate", "dependencies"],
  "nix": {
    "enabled": true
  },
  "dockerfile": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true,
    "pinDigests": false
  },
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["@me"],
    "reviewers": ["@me"]
  },
  "packageRules": [
    {
      "matchCategories": ["docker"],
      "enabled": true
    },
    {
      "description": "Automatically merge minor updates",
      "matchUpdateTypes": ["minor", "patch"],
      "matchDatasources": ["github-releases", "github-tags"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Docker image updates",
      "groupName": "docker-images",
      "matchDatasources": ["docker"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "GitHub Actions updates",
      "groupName": "github-actions",
      "matchDatasources": ["github-actions"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Renovate self-updates",
      "matchDatasources": ["docker"],
      "matchDepNames": ["renovatebot/renovate"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": ["/.+\\.nix$/"],
      "matchStrings": ["\\s+image\\s+=\\s+\"(?<depName>.*?):(?<currentValue>.*?)\""]
    }
  ]
}
